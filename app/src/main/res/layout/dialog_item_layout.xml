<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/otheUserImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/corners14appcolor"/>

    <View
        android:id="@+id/online"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/corners6appcolor2dpsrrokewight"
        android:layout_alignEnd="@+id/otheUserImage"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/otherUserNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/otheUserImage"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/app_color"/>

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/otheUserImage"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/app_grey"
        android:layout_below="@+id/otherUserNick"/>

    <TextView
        android:id="@+id/newMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="4"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:background="@drawable/corners6appcolor2dpsrrokewight"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginEnd="24dp"/>

</RelativeLayout>