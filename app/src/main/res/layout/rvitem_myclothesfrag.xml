<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:background="@drawable/corners"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="18dp"
    android:layout_marginTop="8dp"
    android:elevation="12dp">

    <TextView
        android:id="@+id/clothesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratblack"
        android:textSize="22sp"
        android:text="Jordan 1"
        android:textColor="@color/app_color"
        />

    <TextView
        android:id="@+id/purchaseTodayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesTitle"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/purchases"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/app_grey" />

    <TextView
        android:id="@+id/purchaseToday1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchaseTodayText"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/today1"
        android:textSize="14sp"
        android:textColor="@color/app_grey" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchaseToday1"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/purchasesToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/app_color"
            android:fontFamily="@font/montserratblack"
            />

        <TextView
            android:id="@+id/perSentPurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@id/purchasesToday"
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/app_grey"
            android:textSize="12sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/profitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/profit"
        android:textColor="@color/app_grey" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profitText">

        <TextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:textColor="@color/green"
            android:layout_centerVertical="true"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/coinsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@+id/profit"
            android:src="@drawable/ic_greenschoolycoin" />

        <ImageView
            android:id="@+id/dollarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@+id/profit"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/clothesImage"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_extrabold"/>

    <TextView
        android:id="@+id/purchaseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:layout_toRightOf="@+id/total"
        android:textColor="@color/app_color"
        android:fontFamily="@font/montserratblack"/>

    <ImageView
        android:id="@+id/purchaseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@id/purchaseNumber"
        android:src="@drawable/ic_bagpurple" />

</RelativeLayout>