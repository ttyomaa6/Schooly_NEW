<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/back_toprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="26dp"
                android:background="@drawable/corners14"
                android:src="@drawable/left_arrow"/>

            <TextView
                android:id="@+id/changeface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/back_toprofile"
                android:text="@string/editing"
                android:textColor="@color/app_color"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/editing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="243dp"
                android:background="@drawable/corners15dpappcolor"
                android:fontFamily="@font/montserrat_bold"
                android:padding="12dp"
                android:text="@string/changeface"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/usernameediting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="368dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/usernameediting"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittextnickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameediting"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:maxLength="24"
                android:textColor="@color/app_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittextnickname"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/bio"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittextbio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/biography"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:maxLength="24"
                android:textColor="@color/app_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/edittextbio"
                android:layout_marginTop="24dp"
                android:background="@drawable/corners15dpappcolor"
                android:fontFamily="@font/montserrat_bold"
                android:padding="12dp"
                android:text="@string/agree"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </RelativeLayout>
    </LinearLayout>

</ScrollView>