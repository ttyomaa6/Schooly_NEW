<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/viewrecycler"
        android:layout_width="256dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewrecycler"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/inhour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserratblack"
            android:textColor="@color/app_color"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/minerinhourtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@+id/inhour"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/inhour"
            android:textColor="@color/app_color"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/use"
            android:fontFamily="@font/montserrat_extrabold"
            android:background="@drawable/corners14appcolor"
            android:textColor="@color/white"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginEnd="24dp"/>

    </RelativeLayout>

</RelativeLayout>