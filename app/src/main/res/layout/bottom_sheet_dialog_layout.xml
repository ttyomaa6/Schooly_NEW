<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/corners10grey" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/share"
        android:textColor="@color/app_grey"
        android:textSize="20sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/share"
        android:background="@color/tl_color"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:hint="@string/writeMessage"
        android:layout_marginStart="24dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:maxLines="4"
        android:layout_marginEnd="24dp"
        android:textColor="@color/app_grey"
        android:textColorHint="@color/app_grey"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="14sp"
        android:background="@null"/>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/message"
        android:background="@color/tl_color" />

    <EditText
        android:id="@+id/searchuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/corners12_2dpstrokeappcolor"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/search"
        android:maxLines="1"
        android:paddingStart="16sp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:textColor="@color/app_color"
        android:textColorHint="@color/greysearch"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/searchuser"/>

    <TextView
        android:id="@+id/emptySubscribersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptySubscribersList"
        android:layout_centerInParent="true"
        android:layout_marginTop="350dp"
        android:textColor="@color/app_color"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:visibility="gone"/>

</RelativeLayout>