<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backtoOtherUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/left_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/backtoOtherUser"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/toComplain"
        android:textColor="@color/app_color"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/reasonTextString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backtoOtherUser"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textSize="13sp"
        android:text="@string/textReason"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/reasonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reasonTextString"
        android:layout_marginTop="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/addDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addDescription"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/app_grey"
        android:layout_below="@+id/reasonText"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"/>

    <EditText
        android:id="@+id/addDescriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="14sp"
        android:maxLines="8"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/app_grey"
        android:paddingBottom="100dp"
        android:layout_below="@+id/addDescription"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/corners14dpappcolor2dpstroke"/>


    <TextView
        android:id="@+id/sendReasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/corners14appcolor"
        android:fontFamily="@font/montserrat_bold"
        android:padding="12dp"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>