<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/back_tosettingssupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/back_tosettingssupport"
            android:text="@string/support"
            android:textColor="@color/app_color"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_tosettingssupport"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/corners20white2dpwhitestroke"
            android:elevation="4dp">

            <EditText
                android:id="@+id/aboutproblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:maxLines="14"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/app_grey"
                android:fontFamily="@font/montserrat_bold"
                android:hint="@string/error"
                android:textColorHint="@color/app_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutproblem"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:lines="2"
                android:text="@string/soobchi"
                android:textColor="@color/app_grey"
                android:textSize="14sp" />


        </RelativeLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>