<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/corners10lightgrey" />

    <TextView
        android:id="@+id/textReasonComplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/complainReason"
        android:textColor="@color/app_grey"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/complainOtherUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReasonComplain"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/app_grey"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reasonsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingBottom="32dp"
        android:layout_below="@+id/complainOtherUserText"
        android:layout_marginTop="24dp" />

</RelativeLayout>