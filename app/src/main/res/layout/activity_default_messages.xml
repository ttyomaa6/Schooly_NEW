
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input"
        app:incomingAvatarHeight="56dp"
        app:incomingAvatarWidth="56dp"
        style="@style/TextInput"
        android:layout_marginBottom="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:src="@drawable/ic_send" />
        <ImageView
            android:id="@+id/action_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:src="@drawable/ic_chat" />

        <TextView
            android:id="@+id/mnick"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="110dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/backtoalldialogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_arrow___rightwhite" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/backtoalldialogs"
            android:background="@drawable/corners14" />
    </RelativeLayout>


    <com.stfalcon.chatkit.messages.MessageInput
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/corners22appcolor"
        android:theme="@style/CustomChipText"
        app:inputButtonBackground="@drawable/corners18appcolor"
        app:inputButtonIcon="@drawable/ic_sendmessage"
        app:inputHint="@string/messages"
        app:inputHintColor="@color/white"
        app:inputTextColor="@color/white"
        app:showAttachmentButton="false">

        <ImageView
            android:id="@+id/imageinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:src="@drawable/ic_image" />

        <ImageView
            android:id="@+id/pole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="122dp"
            android:src="@drawable/ic_image" />

        <ImageView
            android:id="@+id/voiceinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_voicemessage" />
    </com.stfalcon.chatkit.messages.MessageInput>

    <LinearLayout
        android:id="@+id/myfragment"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal" />

</RelativeLayout>