<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/minerImage"
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minerImage"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/minerprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/schoolycoin"
            android:textColor="@color/app_color"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color"
            android:fontFamily="@font/montserrat_extrabold"
            android:textSize="18sp"
            android:text="/"
            android:layout_toRightOf="@+id/minerprice"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/inHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/s"
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/app_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/schoolycoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_schoolycoin" />

        <TextView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="94dp"
            android:background="@drawable/corners14appcolor"
            android:fontFamily="@font/montserrat_extrabold"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="@string/buy"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>