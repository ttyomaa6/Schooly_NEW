<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_toshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/left_arrow" />

    <TextView
        android:id="@+id/shopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/back_toshop"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/shop"
        android:textColor="@color/app_color"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/linearCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/corners8shopmain">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="14dp"
            android:src="@drawable/ic_schoolycoin"/>


        <TextView
            android:id="@+id/schoolycoincvfrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:paddingEnd="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopText"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:textColor="@color/app_color"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_bag" />

    <TextView
        android:id="@+id/purchaseNumberViewing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopText"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="2dp"
        android:layout_toLeftOf="@+id/bag"
        android:fontFamily="@font/montserrat_bold"
        android:text="144"
        android:textColor="@color/app_grey"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/clothesImagecv"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_below="@+id/creator"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/clothesTitlecv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/clothesImagecv"
        android:fontFamily="@font/montserratblack"
        android:textColor="@color/app_color"
        android:textSize="24dp"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/send"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/fittingClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesImagecv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/corners10appcolor2dpstroke"
        android:fontFamily="@font/montserrat_bold"
        android:padding="11dp"
        android:text="@string/tryOnClothes"
        android:textColor="@color/app_color"
        android:textSize="13dp" />


    <ImageView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesImagecv"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toLeftOf="@+id/fittingClothes"
        android:src="@drawable/ic_sendviewingclothes" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fittingClothes"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/descriptipon"
        android:textColor="@color/app_grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/app_grey"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:autoLink="all"/>

    <TextView
        android:id="@+id/noDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/noDescriptipon"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corners20appcolor">

        <TextView
            android:id="@+id/buyClothesBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corners14dpwhite"
            android:elevation="18dp"
            android:fontFamily="@font/montserratblack"
            android:paddingStart="25dp"
            android:paddingTop="12dp"
            android:paddingEnd="25dp"
            android:paddingBottom="12dp"
            android:text="@string/buy"
            android:textColor="@color/app_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/coinsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_schoolycoin24dp" />

        <ImageView
            android:id="@+id/dollarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dollarwhitebig"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/checkBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/buyClothesBottom"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/inBasketClothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_inbasket"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/notInBasketClothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notinbasket" />

        </RelativeLayout>

        <TextView
            android:id="@+id/clothesPricecv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:fontFamily="@font/montserratblack"
            android:textColor="@color/white"
            android:textSize="26sp" />


    </RelativeLayout>





</RelativeLayout>