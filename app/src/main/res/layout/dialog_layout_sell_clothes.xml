<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="170dp"
    android:background="@drawable/corners14dpwhite"
    android:layout_centerInParent="true"
    android:elevation="6dp">

    <TextView
        android:id="@+id/sellText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_grey"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        android:layout_marginEnd="16dp"
        android:text="@string/cantSellClothes"/>

    <RelativeLayout
        android:id="@+id/sellRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sellText"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/corners14appcolor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/good"/>


    </RelativeLayout>

</RelativeLayout>