<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
        android:id="@+id/voicePlayerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:enableVisualizer="true"
        app:visualizationPlayedColor="#ff7700"
        app:visualizationNotPlayedColor="#727172"
        app:playPauseBackgroundColor="#D000FF"
        app:timingBackgroundColor="#6AD900FF"
        app:seekBarProgressColor="#000"
        app:showShareButton="false"
        app:shareCornerRadius="100"
        app:playPauseCornerRadius="500"
        app:showTiming="true"
        app:viewCornerRadius="100"
        app:viewBackground="#C6C4CF"
        app:progressTimeColor="#000"
        app:seekBarThumbColor="#FFC107"
        app:shareBackgroundColor="#ff7700"
        app:playProgressbarColor="#4CFF00"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>