<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/leftarrowtoreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/corners14"
        android:src="@drawable/left_arrow"/>

    <TextView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/leftarrowtoreg"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/character"
        android:textColor="@color/app_color"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_grey"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:text="@string/ready"/>

    <com.google.ar.sceneform.SceneView
        android:id="@+id/sceneViewCreateCharacter"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/character"
        android:layout_marginTop="24dp"
        android:background="@drawable/corners18dppinkcharacter" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frcontwardrobe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/sceneViewCreateCharacter" />

</RelativeLayout>