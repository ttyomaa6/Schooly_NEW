<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/back_tomyclothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/back_tomyclothes"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/creatingClothes"
            android:textColor="@color/app_color"
            android:textSize="23sp" />

        <RelativeLayout
            android:id="@+id/beforeShareRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_tomyclothes"
            android:layout_marginStart="24dp"
            >

            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="!"
                android:textColor="@color/app_grey"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="60dp"
                android:layout_toRightOf="@+id/qq"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/before"
                android:textColor="@color/app_grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/qq"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/criteria"
                android:layout_below="@+id/before"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="-4dp"
                android:layout_marginStart="24dp"
                android:textColor="@color/app_color"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/enterTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/enterTitleText"
            android:layout_below="@+id/beforeShareRelative"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextClothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterTitleText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/corners14dpappcolor2dpstroke"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/app_grey"
            android:textColorHint="@color/app_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/addModelFileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/addModelFile"
            android:layout_below="@+id/editTextClothes"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/addModelFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addModelFileText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_addfile" />

        <TextView
            android:id="@+id/modelWay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addModelFile"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/corners10appcolor2dpstroke"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="@string/wayToFile"
            android:textColor="@color/app_grey" />

        <TextView
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/addModelImage"
            android:layout_below="@+id/modelWay"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/addModelImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_addfile" />

        <TextView
            android:id="@+id/clothesType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addModelImage"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/clothesType"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:checkedButton="@+id/radio_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clothesType"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp">
            <RadioButton
                android:id="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/app_grey"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/shoes"/>
            <RadioButton
                android:id="@+id/radio_button_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/app_grey"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/clothes"/>
            <RadioButton
                android:id="@+id/radio_button_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/app_grey"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/hats"/>
            <RadioButton
                android:id="@+id/radio_button_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/app_grey"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/accessories"/>
        </RadioGroup>

        <TextView
            android:id="@+id/currencyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/currencyType"
            android:layout_below="@+id/radioGroup"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/schoolycoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currencyType"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_schoolycoinpurple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currencyType"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/schoolycoin"
            android:fontFamily="@font/montserrat_bold"
            android:text="Schooly coin"
            android:textColor="@color/app_color" />

        <TextView
            android:id="@+id/clothesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schoolycoin"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/clothesPrice"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editClothesPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clothesPrice"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/corners14dpappcolor2dpstroke"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/app_grey"
            android:textColorHint="@color/app_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editClothesPrice"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/descriptipon"
            android:textColor="@color/app_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addDescriptionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/corners14dpappcolor2dpstroke"
            android:fontFamily="@font/montserrat_bold"
            android:hint="@string/addDesk"
            android:maxLines="8"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="100dp"
            android:textColor="@color/app_grey"
            android:textColorHint="@color/app_grey"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addDescriptionEdit"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/corners14appcolor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_bold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/sendApplication"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>