<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:scrollbars="none"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/app_name"
            android:textColor="@color/app_color"
            android:textSize="24sp"
            android:fontFamily="@font/montserratblack"/>

        <ImageView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_chat"/>

        <ImageView
            android:id="@+id/nontification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chat"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_notification"/>


        <RelativeLayout
            android:id="@+id/relativeshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appname">

            <TextView
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/shop"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:fontFamily="@font/montserratblack"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:background="@drawable/corners8dpshopmain">

                <ImageView
                    android:id="@+id/schoolycoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="14dp"
                    android:src="@drawable/ic_schoolycoin"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratblack"
                    android:paddingEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="283dp"
            android:text="@string/tests"
            android:layout_below="@id/relativeshop"
            android:textColor="@color/grey"
            android:fontFamily="@font/montserratblack"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/famous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tests"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:text="@string/popular"
            android:textColor="@color/app_color"
            android:fontFamily="@font/montserratblack"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/mining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mining"
            android:layout_marginStart="24dp"
            android:layout_below="@+id/famous"
            android:textColor="@color/grey"
            android:fontFamily="@font/montserratblack"
            android:textSize="20sp"
            android:layout_marginTop="70dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mining"
            android:layout_marginTop="16dp"
            android:background="@drawable/corners30appcolor"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/today"
                android:fontFamily="@font/montserrat_extrabold"
                android:textSize="40sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:text="@string/moremoney"
                android:fontFamily="@font/montserrat_bold"
                android:paddingBottom="12dp"
                android:paddingStart="6dp"
                android:paddingTop="12dp"
                android:paddingEnd="6dp"
                android:elevation="20dp"
                android:textColor="@color/app_color"
                android:background="@drawable/corners15dpwhite"/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>

